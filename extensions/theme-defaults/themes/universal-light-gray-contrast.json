{
	"$schema": "vscode://schemas/color-theme",
	"name": "Universal Light-Gray Contrast",
	"type": "light",

	"colors": {
		"editor.background": "#F2F2F2",
		"editor.foreground": "#1A1A1A",
		"editorCursor.foreground": "#0059FF",

		"editorLineNumber.foreground": "#777777",
		"editorLineNumber.activeForeground": "#1A1A1A",

		"editor.selectionBackground": "#BFD7FF",
		"editor.inactiveSelectionBackground": "#DDE9FF",

		"editor.lineHighlightBackground": "#E8E8E8",

		"editorIndentGuide.background": "#CCCCCC",
		"editorIndentGuide.activeBackground": "#888888",

		"editorWhitespace.foreground": "#CCCCCC",
		"editorBracketMatch.border": "#006BFF",

		"statusBar.background": "#E0E0E0",
		"statusBar.foreground": "#1A1A1A",

		"sideBar.background": "#F2F2F2",
		"sideBar.foreground": "#1A1A1A",
		"sideBarSectionHeader.background": "#E5E5E5",

		"activityBar.background": "#F2F2F2",
		"activityBar.foreground": "#1A1A1A",
		"activityBarBadge.background": "#0059FF",
		"activityBarBadge.foreground": "#FFFFFF",

		"tab.activeBackground": "#FFFFFF",
		"tab.inactiveBackground": "#F2F2F2",
		"tab.activeForeground": "#1A1A1A",
		"tab.inactiveForeground": "#777777",

		"panel.background": "#F2F2F2",
		"panel.border": "#CCCCCC",

		"terminal.background": "#FFFFFF",
		"terminal.foreground": "#1A1A1A",

		"terminalCursor.foreground": "#0059FF",

		"list.hoverBackground": "#E5E5E5",
		"list.activeSelectionBackground": "#C2DAFF",
		"list.inactiveSelectionBackground": "#E8E8E8"
	},

	"tokenColors": [
		{
			"scope": ["comment"],
			"settings": {
				"foreground": "#7A7A7A",
				"fontStyle": "italic"
			}
		},
		{
			"scope": ["keyword", "storage.type"],
			"settings": {
				"foreground": "#004FCC"
			}
		},
		{
			"scope": ["string"],
			"settings": {
				"foreground": "#B35A00"
			}
		},
		{
			"scope": ["variable", "identifier"],
			"settings": {
				"foreground": "#1A1A1A"
			}
		},
		{
			"scope": ["constant.numeric"],
			"settings": {
				"foreground": "#008A2E"
			}
		},
		{
			"scope": ["entity.name.function"],
			"settings": {
				"foreground": "#006BFF"
			}
		},
		{
			"scope": ["entity.name.type"],
			"settings": {
				"foreground": "#8533A6"
			}
		}
	]
}
